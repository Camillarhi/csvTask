

@model IEnumerable<csvTask.Models.ActiveGovernor>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses List</h2>
        </div>
        <div class="col-6 textright">
            <a asp-controller="ActiveGovernors" asp-action="Create" class="btn btn-primary">Create New  Governor`s List</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        State
                    </th>
                    <th>
                        Capital
                    </th>
                    <th>
                        Governor
                    </th>
                    <th>
                        Edit
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var gov in Model)
                {
                    <tr>
                        <td width="35%">@gov.State</td>
                        <td width="35%">@gov.Capital</td>
                        <td width="35%">@gov.Governor</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ActiveGovernors" asp-action="Update" asp-route-Id="@gov.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="ActiveGovernors" asp-action="Delete" asp-route-Id="@gov.Id" class="btn btn-danger mx-1">Delete</a>

                            </div>


                        </td>

                    </tr>
                }
            </tbody>

        </table>
        <div class="col-6 textright">
            <a asp-controller="ActiveGovernors" asp-action="CSV" class="btn btn-info">View</a>
        </div>
    }
    else
    {
        <p>No Governor`s List Created Yet</p>
    }

</div>



